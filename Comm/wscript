## -*- python -*-
# Build code in this directory
##    _______     ___
## + 6 @ |||| # P ||| +

import os

def build(bld):
    # only build if in parallel
    if bld.env.MPI_FOUND:
        bld.shlib(
            source = 'GkylMpiFuncs.cpp',
            target = 'comm', name = 'comm', vnum = '1.0',
            includes = '.',
            use = 'MPI'
        )    
