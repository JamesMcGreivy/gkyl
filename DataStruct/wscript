## -*- python -*-
# Build code in this directory
##    _______     ___
## + 6 @ |||| # P ||| +

import os

def build(bld):
    # CUDA specific code
    if bld.env['CUTOOLS_FOUND']:
        bld(source = 'CartFieldDeviceImpl.cu', 
                    name = 'datastruct_cuobjs',
                    includes = '.', features = 'cxx cushlib', target='datastruct_cu'
        )

    bld.shlib(
        source = 'CartFieldImpl.cpp',
        target = 'gkdatastruct', name = 'datastruct', vnum = '1.0',
        includes = '.'
    )
